<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TTTActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Connecting to server..."
        android:id="@+id/tvConnecting"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groups"
        android:weightSum="1">

        <Button
            android:text="Join a random group"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:id="@+id/bJoinGroup"
            android:layout_weight="0.80" />

        <Button
        android:text="Create a group"
        android:layout_width="114dp"
        android:layout_height="match_parent"
        android:id="@+id/bCreateGroup" />

        <Button
            android:text="join a group that I know"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:id="@+id/bJoinGroupIknow" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myGroup">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.94"
            android:text="Group Name:" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/groupName"
            android:layout_weight="2" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/bSubmitGroup"
            android:layout_weight="0.80" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/randomGroup">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.94"
            android:text=""
            android:id="@+id/groupToJoin"/>

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="Join"
            android:id="@+id/bJoinThisGroup"
            android:layout_weight="2.69" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llLoginControls">

        <TextView android:text="Name:" android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/etName"
            android:layout_weight="2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/bConnect"
            android:layout_weight=".1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/llBoard">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b00"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b01" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b02" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b10" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b11" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b12" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b20" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b21" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:enabled="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b22" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
